---
import PublicLayout from '@/layouts/PublicLayout.astro';

import HeroSection from '@/landing/sections/Herosection.astro';
import MessageSection from '@/landing/sections/MessageSection.astro';
import PartnerSection from '@/landing/sections/PartnerSection.astro';
import ProposalSection from '@/landing/sections/ProposalSection.astro';
import FAQSection from '@/landing/sections/FAQSection.astro';
import ContactSection from '@/landing/sections/ContactSection.astro';

const robots = ["index", "follow"];
const title = "Semillero Digital Dashboard";
const description = "El siguiente sitio web busca resolver la organización de Google Classroom para que la herramiente sea más accesible.";
const keywords = ["Educación", "Bienestar", "Estudiantes"];
const url = "https://nerdvibeathonclassroom.vercel.app";
const imageOG = "/card-twt.webp";
const imagetwt = "/card-twt.webp";
---

<PublicLayout {robots} {title} {description} {keywords} {url} {imageOG} {imagetwt}>
	<HeroSection />
	<MessageSection />
	<PartnerSection />
	<ProposalSection />
	<FAQSection />
	<ContactSection />
</PublicLayout>
